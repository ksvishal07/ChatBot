// Firestore Security Rules for IntelliChat Pro
// Copy these rules to Firebase Console > Firestore > Rules

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ============ BOTS COLLECTION ============
    match /bots/{botId} {
      // Users can read their own bots
      allow read: if isOwner(resource.data.userId);
      
      // Users can create bots (must set themselves as owner)
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
      
      // Users can update/delete their own bots
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // ============ CONVERSATIONS COLLECTION ============
    match /conversations/{conversationId} {
      // Bot owners can read conversations for their bots
      allow read: if isAuthenticated() 
        && exists(/databases/$(database)/documents/bots/$(resource.data.botId))
        && get(/databases/$(database)/documents/bots/$(resource.data.botId)).data.userId == request.auth.uid;
      
      // Allow creating conversations (for widget/public access)
      allow create: if true;
      
      // Allow updating conversations (for adding messages)
      allow update: if true;
      
      // Only bot owner can delete conversations
      allow delete: if isAuthenticated()
        && exists(/databases/$(database)/documents/bots/$(resource.data.botId))
        && get(/databases/$(database)/documents/bots/$(resource.data.botId)).data.userId == request.auth.uid;
    }
    
    // ============ USER SETTINGS COLLECTION ============
    match /userSettings/{userId} {
      // Users can only access their own settings
      allow read, write: if isOwner(userId);
    }
  }
}
